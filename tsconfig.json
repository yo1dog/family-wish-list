{
  "compilerOptions": {
    "checkJs": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "allowJs": true,
    "outDir": "fubar" // only used for linting
  },
  "include": [
    "./app/**/*.js",
    "./migrate/**/*.js"
  ]
}